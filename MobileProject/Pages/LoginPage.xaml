<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileProject.LoginPage"
             Title="LoginPage">

    <ScrollView>
        <StackLayout VerticalOptions="Start" Padding="20">
            <Label Text="ðŸ‘¤" HorizontalOptions="Center" HeightRequest="100" FontSize="Header" />
            <Entry x:Name="UsernameEntry" Placeholder="Username" PlaceholderColor="White"
                   BackgroundColor="#2980b9" TextColor="White" Margin="0,20,0,0" WidthRequest="200"/>
            <Entry x:Name="PasswordEntry" Placeholder="Password" PlaceholderColor="White"
