<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileProject"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>

        <Tab Title="LoginPage"  >

            <ShellContent ContentTemplate="{DataTemplate local:LoginPage}" Route="LoginPage"  />

        </Tab>

        <Tab Title="Major"  >

            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"  />

        </Tab>

        <Tab Title="Student"  >

            <ShellContent  ContentTemplate="{DataTemplate local:Student}" Route="Student"/>

        </Tab>

        <Tab Title="Courses"  >

            <ShellContent ContentTemplate="{DataTemplate local:Courses}" Route="Courses"/>

        </Tab>

        <Tab Title="Enrollments"  >

            <ShellContent ContentTemplate="{DataTemplate local:Enrollments}" Route="Enrollments"/>

        </Tab>

        <Tab Title="MidPage"  >

            <ShellContent ContentTemplate="{DataTemplate local:MidPage}" Route="MidPage"/>

        </Tab>


    </TabBar>

</Shell>
